@model CreateRoleViewModel

@{ 
    ViewBag.Title = "Creează un rol nou";
}


<h2>Creează un rol nou</h2>
<div class="row loginForm">
    <div class="col-md-8 offset-md-2">
        <form asp-controller="Administration" asp-action="CreateRole" method="post" role="form">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName" class="col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group float-right formPullRightButton">
                <div class="offset-md-2 col-md-10">
                    <input type="submit" class="btn btn-success " value="Creează rol" />
                </div>
            </div>
        </form>
    </div>
</div>