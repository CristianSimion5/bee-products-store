@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "Toate rolurile";
}

<h1>Toate rolurile</h1>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3"
       asp-controller="Administration" asp-action="CreateRole">
        Adaugă un rol
    </a>

    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Id-ul rolului: @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" asp-controller="Administration"
                   asp-action="DetailsRole" asp-route-id="@role.Id">
                    Detalii
                </a>
                <form asp-action="DeleteRole" asp-route-id="@role.Id"
                      method="post">
                    <input type="submit" class="btn btn-danger" value="Șterge" />
                </form>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            Niciun rol creat
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Folosește acest buton pentru a adăuga un rol
            </h5>
            <a class="btn btn-primary"
               asp-controller="Administration" asp-action="CreateRole">
                Adaugă un rol
            </a>
        </div>
    </div>
}