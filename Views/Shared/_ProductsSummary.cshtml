@model Product

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="figure card">
        <img src="@Model.ImageThumbnailUrl" alt="Thumbnail of a product" class="figure-img img-thumbnail" />
        <div class="figure-caption col-12">
            <h4 class="float-right">@Model.Price.ToString("c")</h4>
            <h3>
                @Model.Name
            </h3>
            <p>@Model.Description</p>
        </div>
        <div class="addToCart mx-auto">
            <p class="button">
                <a class="btn btn-success" id="cartButton"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-productId="@Model.ProductId">
                    Adaugă în coș
                </a>
            </p>
        </div>
    </div>
</div>
